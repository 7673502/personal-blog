---
import { formatDate } from "@/lib/util";

const { post } = Astro.props;
---

<li class="flex w-full flex-col sm:flex-row sm:items-center sm:justify-between">
  <a href={`/posts/${post.id}`} class="link">
    {post.data.title}
  </a>
  <div class="text-black dark:text-dark-muted-text text-base font-normal">
    {formatDate(post.data.publicationDate)}
  </div>
</li>

